<h2><%= @post.title %></h2>
<p><%= @post.content %></p>

<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>

<% @post.comments.each do |comment| %>
  <%= comment.user.username %> says:
  <%= comment.content %>
<% end %>

<ul><% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>
</ul>

